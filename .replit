modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "python main.py"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload main:app"
waitForPort = 5000

[[workflows.workflow]]
name = "Test Sensor"
author = 40625519
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_sensor.py"

[[workflows.workflow]]
name = "Farm Simulator"
author = 40625519
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python farm_simulator.py"

[[ports]]
localPort = 5000
externalPort = 80
